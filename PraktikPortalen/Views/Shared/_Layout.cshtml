<!DOCTYPE html>
@inject IHttpContextAccessor context;

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PraktikPortalen</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PraktikPortalen.styles.css" asp-append-version="true" />
</head>
    <body>
        <header>
        @if (context.HttpContext.Session.GetString("Token") != null)
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3" style="background-color: red;">
                <div class="container-fluid">
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: xx-large;">Praktik Portalen</a>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Internships" asp-action="Internships">Praktikforløb</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Profile" asp-action="Profile">Profil</a>
                            </li>
                        </ul>
                    </div>
                    <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Login" style="font-size: x-large;">Log ud</a>
                </div>
            </nav>
        }
    </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <center>
            <footer class="border-top footer">
                <div class="container">
                    &copy; 2022 - PraktikPortalen
                </div>
            </footer>
        </center>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>