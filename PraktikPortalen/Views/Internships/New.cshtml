@model PraktikPortalen.Models.InternshipsModel
@{
    ViewData["Title"] = "NewReport";
}

<h1>Indberet et praktikforløb</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="New">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InternshipName" class="control-label"> Praktikforløb navn</label>
                <input asp-for="InternshipName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="InternshipCompany" class="control-label">Praktik virksomhed</label>
                <input asp-for="InternshipCompany" class="form-control" />
                <span asp-validation-for="InternshipCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" value="submitted" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="DTUSupervisor_id" class="control-label"> DTU vejleder id</label>
                <input asp-for="DTUSupervisor_id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CompanySupervisor_id" class="control-label">Virksomhedsvejleder id</label>
                <input asp-for="CompanySupervisor_id" class="form-control" />
            </div><br/>
            <div class="form-group">
                <input type="submit" value="Indberet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

